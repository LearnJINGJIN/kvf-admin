<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.modules.schedule.mapper.JobLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.modules.schedule.entity.JobLog">
        <id column="id" property="id" />
        <result column="bean" property="bean" />
        <result column="status" property="status" />
        <result column="reason" property="reason" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       id, bean, status, reason, create_time
    </sql>

    <select id="selectJobLogList" resultType="com.kalvin.kvf.modules.schedule.entity.JobLog">
        select <include refid="Base_Column_List" /> from schedule_job_log
        <trim prefix="where" prefixOverrides="and">
            <if test="jobLog.status != null">
                and status = #{jobLog.status}
            </if>
            <if test="jobLog.bean != null and jobLog.bean != ''">
                and bean like concat(#{jobLog.bean}, "%")
            </if>
        </trim>
        order by create_time desc
    </select>

</mapper>
