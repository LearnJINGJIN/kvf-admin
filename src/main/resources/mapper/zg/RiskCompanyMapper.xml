<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.modules.zg.mapper.RiskCompanyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.modules.zg.entity.RiskCompany">
        <id column="id" property="id" />
        <result column="risk_desc" property="riskDesc" />
        <result column="company_id" property="companyId" />
        <result column="company_name" property="companyName" />
        <result column="risk_level" property="riskLevel" />
        <result column="create_user" property="createUser" />
        <result column="create_date" property="createDate" />
        <result column="update_user" property="updateUser" />
        <result column="update_date" property="updateDate" />
        <result column="dr" property="dr" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       t.id, t.risk_desc, t.company_id, t.risk_level, t.create_user, t.create_date, t.update_user, t.update_date, t.dr, a.company_name
    </sql>

    <select id="selectRiskCompanyList" resultType="com.kalvin.kvf.modules.zg.entity.RiskCompany">
        select <include refid="Base_Column_List" /> from zg_risk_company t left join zg_out_company a on a.id=t.company_id
        <trim prefix="where" prefixOverrides="and">
            <if test="riskCompany.companyId != null">
                and company_id = #{riskCompany.companyId}
            </if>
        </trim>
    </select>

    <select id="selectInfoById" resultType="com.kalvin.kvf.modules.zg.entity.RiskCompany">
        select <include refid="Base_Column_List" /> from zg_risk_company t
        left join zg_out_company a on a.id=t.company_id
        where t.id=#{id}
    </select>
</mapper>
