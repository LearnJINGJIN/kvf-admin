<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.modules.zg.mapper.ReportCompanyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.modules.zg.entity.ReportCompany">
        <id column="id" property="id" />
        <result column="report_year" property="reportYear" />
        <result column="company_id" property="companyId" />
        <result column="report_code" property="reportCode" />
        <result column="company_name" property="companyName" />
         <result column="create_user" property="createUser" />
        <result column="create_date" property="createDate" />
        <result column="update_user" property="updateUser" />
        <result column="upate_date" property="upateDate" />
         <result column="remarks" property="remarks" />
        <result column="dr" property="dr" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       t.id, t.report_year, t.company_id, t.report_code, t.create_user, t.create_date, t.update_user, t.upate_date, t.dr, a.company_name
      ,t.remarks
    </sql>

    <select id="selectReportCompanyList" resultType="com.kalvin.kvf.modules.zg.entity.ReportCompany">
        select <include refid="Base_Column_List" /> from zg_report_company t
        left join zg_out_company a on a.id=t.company_id
         <trim prefix="where" prefixOverrides="and">
            <if test="reportCompany.companyName != null and reportCompany.companyName != ''">
                and a.company_name = #{reportCompany.companyName}
            </if>
            <if test="reportCompany.reportYear != null ">
                and t.report_year = #{reportCompany.reportYear}
            </if>
        </trim>
    </select>

    <select id="selectInfoById" resultType="com.kalvin.kvf.modules.zg.entity.ReportCompany">
        select <include refid="Base_Column_List" /> from zg_report_company t
        left join zg_out_company a on a.id=t.company_id
         where t.id=#{id}
    </select>
</mapper>
