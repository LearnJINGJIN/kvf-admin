<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.modules.zg.mapper.SvnSystemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.modules.zg.entity.SvnSystem">
        <id column="id" property="id" />
        <result column="sys_id" property="sysId" />
        <result column="syn_addr" property="synAddr" />
        <result column="remarks" property="remarks" />
        <result column="dr" property="dr" />
        <result column="create_user" property="createUser" />
        <result column="create_date" property="createDate" />
        <result column="update_user" property="updateUser" />
        <result column="update_date" property="updateDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       id, sys_id, syn_addr, remarks, dr, create_user, create_date, update_user, update_date
    </sql>

    <select id="selectSvnSystemList" resultType="com.kalvin.kvf.modules.zg.entity.SvnSystem">
        select <include refid="Base_Column_List" /> from zg_svn_system
        <trim prefix="where" prefixOverrides="and">
            <if test="svnSystem.sysId != null">
                and sys_id = #{svnSystem.sysId}
            </if>
        </trim>
    </select>

</mapper>
